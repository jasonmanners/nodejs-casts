extends ../../../views/layout

block main
  .row
    .span6
      .pull-left
        h3=title
block content
  each cast in casts
    .row(style="border-bottom: 1px solid rgba(0,0,0,0.3); padding:10px;")
      .span3
        a.thumbnail(href="/"+cast.id)
          img(src= cast.video.poster)
      .span8
        h3= cast.name
        div
          = cast.summary
        div
          a.btn.btn-small.btn-primary(href="/"+cast.id) Play Episode

          
